{
  "name": "opencode-mem",
  "version": "0.1.0",
  "type": "module",
  "description": "Persistent memory plugin for OpenCode with AI compression and cross-session context",
  "author": "Zhang Tao",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andy-zhangtao/opencode-mem.git"
  },
  "homepage": "https://github.com/andy-zhangtao/opencode-mem#readme",
  "bugs": {
    "url": "https://github.com/andy-zhangtao/opencode-mem/issues"
  },
  "keywords": [
    "opencode",
    "ai",
    "memory",
    "context",
    "mcp",
    "persistent",
    "llm",
    "coding-assistant"
  ],
  "main": "dist/plugin.js",
  "types": "dist/plugin.d.ts",
  "bin": {
    "opencode-mem-mcp": "dist/mcp/server.js"
  },
  "files": [
    "dist/",
    "src/ui/",
    "README.md",
    "LICENSE",
    ".opencode/"
  ],
  "scripts": {
    "build": "bun build src/plugin.ts --outdir dist --target=bun && bun build src/mcp/server.ts --outdir dist/mcp --target=bun && cp -r src/ui dist/",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opencode-ai/plugin": "^1.1.53"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "bun-types": "^1.2.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
}
